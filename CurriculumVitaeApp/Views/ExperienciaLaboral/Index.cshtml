@model IEnumerable<CurriculumVitaeApp.Models.ExperienciaLaboral>
@inject CurriculumVitaeApp.Helpers.IdProtector IdProtector

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="modal fade" id="modalDescripcion" tabindex="-1" aria-labelledby="modalDescripcionLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="popup modal-header text-white">
                <h5 class="modal-title titulo-popup" id="modalDescripcionLabel">Descripción</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="formEditarDescripcion" method="post" asp-action="Editar">
                    <input type="hidden" name="idEditar" id="modal-id-editar-ex" />
                    <div class="form-group">
                        <label>Descripción</label>
                        <textarea name="Descripcion" id="modal-descripcion" class="form-control" rows="5" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Guardar</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-cerrar" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<div class="col-md-4">
    <form id="formCrearExperienciaLaboral" asp-action="Crear">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label"> Fecha de inicio</label>
            <input name="fechaInicio" class="form-control" required />
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Fecha de termino</label>
            <input name="fechaTermino" class="form-control" />
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Empresa</label>
            <input name="Empresa" class="form-control" required />
            <span  class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Descripción</label>
            <textarea textarea type="text" name="Descripcion" class="form-control" required></textarea>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Crear" class="btn btn-success btn-sm" />
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaTermino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vigente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <input type="text" name="FechaInicio" class="form-control input-fecha-inicio" value="@item.FechaInicio" required />
                <span for="FechaInicio" class="text-danger"></span>
            </td>
            <td>
                <input type="text" name="FechaTermino" class="form-control input-fecha-termino" value="@item.FechaTermino" required />
                <span for="FechaTermino" class="text-danger"></span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vigente)
            </td>
            <td>
                <input type="text" name="Empresa" class="form-control input-empresa" value="@item.Empresa" required />
                <span for="Empresa" class="text-danger"></span>
            </td>
            <td>
                <span class="descripcion-clickable-el text-primary"
                        data-descripcion="@item.Descripcion"
                        data-id="@IdProtector.EncryptId(item.Id)"
                        style="cursor:pointer; text-decoration: underline;">
                    Ver descripción
                </span>
            </td>
            <td>
                
                <form asp-action="Editar" id="formEditarExperienciaLaboral" method="post" class="edit-form">
                    <input type="hidden" name="idEditar" value="@IdProtector.EncryptId(item.Id)" />
                    <input type="hidden" name="FechaInicio" class="hidden-fecha-inicio" />
                    <input type="hidden" name="FechaTermino" class="hidden-fecha-termino" />
                    <input type="hidden" name="Empresa" class="hidden-empresa" />
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
                <form asp-action="Delete" id="formEliminarExperiencia" method="post" class="delete-form">
                    <input type="hidden" name="id" value="@IdProtector.EncryptId(item.Id)" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-controller="Home" asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).on('click', '.descripcion-clickable-el', function () {
            const descripcion = $(this).data('descripcion');
            const id = $(this).data('id');

            const modal = $('#modalDescripcion');
            modal.find('#modal-descripcion').val(descripcion);
            modal.find('#modal-id-editar-ex').val(id);

            modal.modal('show');
        });


        function confirmarEliminacion(event) {
            event.preventDefault();

            Swal.fire({
                title: '¿Está seguro que desea eliminar este registro?',
                text: 'Esta acción no se puede deshacer.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Registro eliminado',
                        text: 'El registro se ha eliminado con éxito.',
                        confirmButtonColor: '#005D8F',
                        allowOutsideClick: false,
                        allowEscapeKey: false
                    }).then(() => {
                        document.getElementById('submitButtonHidden').value = 'eliminar';
                        event.target.closest('form').submit();
                    });
                }

            });
        }

        $(document).on('submit', '#formEditarDescripcion', function (e) {
            e.preventDefault();

            $.ajax({
                url: '/ExperienciaLaboral/Editar',
                method: 'POST',
                data: $(this).serialize(),
                success: function (result) {

                    // Cerrar modal
                    $('#modalDescripcion').modal('hide');

                    Swal.fire({
                        icon: 'success',
                        title: 'Descripción actualizada',
                        confirmButtonColor: '#005D8F'
                    });

                    // Recargar parcial si es necesario:
                    const contenedor = $('.opcion[data-url="/ExperienciaLaboral/Index"]').find('.contenido-parcial');
                    contenedor.html(result);
                },
                error: function (xhr) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error al guardar descripción',
                        text: xhr.responseText
                    });
                }
            });
        });

    </script>

}

@model IEnumerable<CurriculumVitaeApp.Models.DatosBasicos>
@inject CurriculumVitaeApp.Helpers.IdProtector IdProtector

@{
    ViewData["Title"] = "Index";
}



<style>
    .form-row {
        display: flex;
        gap: 15px; /* separación entre columnas */
        align-items: flex-end; /* alinea inputs y button abajo */
    }
</style>

<p>
    <a asp-action="Crear">Crea un dato básico</a>
</p>

<h3>Datos básicos</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreDato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorDato)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <input type="text" name="NombreDato" class="form-control input-nombre" value="@item.NombreDato" data-original="@item.NombreDato" required />
                <span for="NombreDato" class="text-danger"></span>
            </td>
            <td>
                <input type="text" name="Valor" class="form-control input-valor" value="@item.ValorDato" data-original="@item.ValorDato" required />
                <span for="ValorDato" class="text-danger"></span>
            </td>
            <td>
                <form asp-action="Editar" id="formEditarDato" method="post" class="edit-form">
                    <input type="hidden" name="idEditar" value="@IdProtector.EncryptId(item.Id)" />
                    <input type="hidden" name="NombreDato" class="hidden-nombre" />
                    <input type="hidden" name="ValorDato" class="hidden-valor" />
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
                <button type="button" class="btn btn-secondary btn-cancelar-datos-basicos">Cancelar</button>
                <form asp-action="Eliminar" id="formEliminarDato" method="post" class="delete-form">
                    <input type="hidden" name="id" value="@IdProtector.EncryptId(item.Id)" />
                    <button type="submit" onclick="confirmarEliminacion(event)" class="btn btn-danger">Eliminar</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-controller="Home" asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/vistas-index.js"></script>
      

}


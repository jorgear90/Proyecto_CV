@model List<string>

@{
    ViewData["Title"] = "Home Page";
}

@if (Model == null || !Model.Any())
{
    <div class="text-center">
        <h1 class="display-4">Bienvenido</h1>
    </div>
}
else
{
    <div class="row">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="col-3 text-center m-2">

                <a asp-controller="Curriculum"
                   asp-action="VistaSeleccionar"
                   asp-route-id="@i">

                    <img src="~/cv/@Model[i]"
                         class="img-fluid"
                         style="cursor:pointer; border:1px solid #ccc; padding:5px;" />

                </a>

                <p>@Model[i]</p>
            </div>
        }
    </div>
}
